<script>
  (function () {
    try {
      const KEY = "hideShareNudge";
      if (localStorage.getItem(KEY) === "1") return;
      const el = document.getElementById("share-nudge");
      const btn = document.getElementById("share-nudge-close");
      if (!el || !btn) return;
      // show after a short delay so it feels gentle
      setTimeout(() => el.classList.remove("hidden"), 10000);
      btn.addEventListener("click", () => {
