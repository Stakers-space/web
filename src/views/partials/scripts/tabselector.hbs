<script>Array.from(document.getElementsByClassName("tabselector")).forEach((tabSelector) => {
		var nav = tabSelector.children[0]; // navbar
		for(var i=0;i<nav.children.length;i++){
			if(!nav.children[i].classList.contains("tab")) continue;
			nav.children[i].addEventListener('click', function(e) {
				const tabButton = this;
				console.log("TabSelector clicked", e.target, "â†’", tabButton);
				var tabSelectorChildrens = tabButton.parentElement.parentElement.children;
				console.log("TabSelector childrens", tabSelectorChildrens);
				// hide all tabpanels, unselect nav tabs
				for(var c=0;c<tabSelectorChildrens.length;c++){
					if(c===0) {
						Array.from(tabSelectorChildrens[c].children).forEach((navBtn) => {
							navBtn.classList.remove('selected');
						});
					} else {
						tabSelectorChildrens[c].classList.remove('selected');
					}
				}
				// highline requested tab button
				tabButton.classList.add('selected');
				// display requested tabpanel
				const targetPanelIndex = Number(tabButton.dataset.tabpanel);
				if (tabSelectorChildrens[targetPanelIndex]) {
					tabSelectorChildrens[targetPanelIndex].classList.add('selected');
				}
			});
		}
});</script>