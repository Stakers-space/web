<script>function Slider(slides){
    this.slides = slides;
    this.currentIndex = 0;
}
Slider.prototype.Start = function(){
    setInterval(this.Slide, 4000, this);
};
Slider.prototype.Slide = function(inst){
    //console.log("slide", inst);
    inst.slides[inst.currentIndex].classList.remove('visible');
    inst.slides[inst.currentIndex].classList.add('hidden');
    inst.currentIndex = (inst.currentIndex + 1) % inst.slides.length;
    inst.slides[inst.currentIndex].classList.remove('hidden');
    inst.slides[inst.currentIndex].classList.add('visible');
};
Array.from(document.querySelectorAll('.dynamic.label')).forEach((dynamicLabel) => {
    new Slider(dynamicLabel.children).Start();
});
