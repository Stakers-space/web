{{> header}}
<main>
	<section class="py-12 container mx-auto px-6">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-15">
				
			<div class="grid items-center">
				<div>
					<ul class="broadcrumbs" vocab="https://schema.org/" typeof="BreadcrumbList">
						<li property="itemListElement" typeof="ListItem">
							<a property="item" typeof="Thing" href="/" class="hover:underline">
								<span property="name">Stakers.space</span>
							</a>
							<meta property="position" content="1">
						</li>
						<li property="itemListElement" typeof="ListItem">
							<a property="item" typeof="Thing" href="/chains" class="hover:underline">
								<span property="name">Chains</span>
							</a>
							<meta property="position" content="2">
						</li>
						<li property="itemListElement" typeof="ListItem">
							<a property="item" typeof="Thing" href="/ethereum" class="hover:underline">
								<span property="name">Ethereum</span>
							</a>
							<meta property="position" content="2">
						</li>
					</ul>

					<h1 class="flex items-center gap-4 text-5xl lg:text-7xl font-bold leading-tight mb-8">
						<img src="/logo/ethereum.svg" alt="Ethereum logo" class="h-20 w-20">
						Ethereum
					</h1>

					<p class="text-gray-700 leading-relaxed">
						Ethereum is a decentralized blockchain where transactions take place, including payments,
						ownership of digital assets, and interactions with smart contracts.
						These operations are
						<strong>powered by its native token, Ether (ETH), which serves both as a digital currency
						and as a means to pay for network fees</strong>,
						<a href="#ethereum" class="text-blue-600 hover:underline">see more detailed view.</a>
					</p>

					<div class="mt-6 text-gray-500">
						Officially launched on July 30, 2015
					</div>
					

					<ul class="flex flex-wrap items-center gap-6 text-lg font-medium mt-8">
						<li>
							<a href="https://ethereum.org" target="_blank" 
							class="text-[#4a4e57] hover:text-emerald-600 transition-colors duration-200">
							Website
							</a>
						</li>
						<li>
							<a href="https://etherscan.io/" target="_blank" 
							class="text-[#4a4e57] hover:text-emerald-600 transition-colors duration-200">
							Explorer
							</a>
						</li>
						<li>
							<a href="https://github.com/ethereum" target="_blank" 
							class="text-[#4a4e57] hover:text-emerald-600 transition-colors duration-200">
							GitHub
							</a>
						</li>
					</ul>
				</div>
			</div>

			<div>
				<p class="mb-2 text-gray-500 text-center">Charts for last 10 days</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6 pr-8">
					<div class="relative block bg-gray-50 rounded-lg shadow hover:shadow-lg transition p-4">
						<div class="mb-4">
							<h2 class="text-xl font-semibold">
								Price
							</h2>
							<span>Chart soon.</span>
						</div>
					</div>
					
					<a href="/charts/ethereum-marketcap" class="relative block bg-gray-50 rounded-lg shadow hover:shadow-lg transition p-4">
						<div class="mb-4">
						<h2 class="text-xl font-semibold">ETH Marketcap</h2>
						</div>
						<canvas id="marketcap_chart" name="lazy-canvas" class="w-full h-40"></canvas>
						<div class="chart-legend">
							<span class="black-line">Market Cap</span>
							<span class="balance-bar">Daily change</span>
						</div>
					</a>

					<a href="/charts/eth-circulation-supply" class="relative block bg-gray-50 rounded-lg shadow hover:shadow-lg transition p-4">
						<div class="mb-4">
							<h2 class="text-xl font-semibold">
								{{{indicators.supply.value}}} ETH circ supply
							</h2>
							<div class="bg-green-100 text-green-700 rounded px-2 py-1 w-[170px] h-[21px] overflow-hidden text-xs">
								<span class="block">{{{indicators.supply.increments.day}}} in the last day</span>
							</div>
						</div>
						<canvas id="ethsupply_chart" name="lazy-canvas" class="w-full h-40"></canvas>
						<div class="chart-legend">
							<span class="black-line">ETH Circ Supply</span>
							<span class="balance-bar">Daily change</span>
						</div>
					</a>

					<a href="/charts/ethereum-transactions" class="relative block bg-gray-50 rounded-lg shadow hover:shadow-lg transition p-4">
						<div class="mb-4">
						<h2 class="text-xl font-semibold">Transactions</h2>
						</div>
						<canvas id="transactions_chart" name="lazy-canvas" class="w-full h-40"></canvas>
						<div class="chart-legend">
							<span class="black-line">Transactions</span>
							<span class="balance-bar">ETH Fees</span>
						</div>
					</a>
				</div>
			</div>
		</div>
	</section>

		<!-- Newsfeed -->
				<section class="px-6 py-6 bg-gradient-to-b from-white to-gray-50">

					<div class="lg:p-6 container mx-auto">
						<h2 class="text-2xl font-bold leading-tight mb-4">Latest news</h2>
						<ul class="space-y-3 lg:columns-2 lg:gap-x-12">
							{{#each newsfeed.fundamental}}
							<li class="flex justify-between text-sm">
								<a href="{{this.a}}" target="_blank" rel="nofollow noopener noreferrer"
								class="text-blue-600 hover:underline">{{{this.m}}}</a>
								<span class="text-gray-500" title="{{{this.ht}}}">{{{this.ta}}}</span>
							</li>
							{{/each}}
						</ul>
						<a href="/ethereum-staking/news" 
							class="mt-6 inline-block bg-black text-white rounded-lg px-5 py-2 hover:bg-gray-800 transition">
							View all news
						</a>
					</div>
	</section>

