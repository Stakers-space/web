<body id="body" data-amp-auto-lightbox-disable>
{{> header_amp}}
<main class="px-6 lg:px-20 py-12 bg-gradient-to-b from-white to-gray-50">
  <div class="max-w-7xl mx-auto">
    <ul class="broadcrumbs" vocab="https://schema.org/" typeof="BreadcrumbList">
			<li property="itemListElement" typeof="ListItem">
				<a property="item" typeof="Thing" href="/" class="hover:underline">
					<span property="name">Stakers.space</span>
				</a>
				<meta property="position" content="1">
			</li>
			<li property="itemListElement" typeof="ListItem">
				<a property="item" typeof="Thing" href="/chains" class="hover:underline">
					<span property="name">Chains</span>
				</a>
				<meta property="position" content="2">
			</li>
		</ul>

    <!-- Title -->
    <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-8">
      Chains
    </h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <article class="bg-white rounded-xl p-6 shadow hover:shadow-lg transition">
        <a href="/ethereum" class="flex items-center gap-4 mb-6">
          <img src="/logo/ethereum.svg" alt="Ethereum logo" class="h-12 w-12">
          <h2 class="text-xl font-semibold">Ethereum</h2>
        </a>

        <div class="mb-6">
          <h3 class="text-md font-semibold text-gray-800 mb-3">Generalized Layer 2s</h3>
          <ul class="grid grid-cols-2 gap-3">
            <li><a href="https://arbitrum.io/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              Arbitrum One
            </a></li>
            <li><a href="https://www.optimism.io/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              Optimism
            </a></li>
            <li><a href="https://zksync.io/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              ZKsync
            </a></li>
            <li><a href="https://www.base.org/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              Base
            </a></li>
            <li><a href="https://www.starknet.io/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              Starknet
            </a></li>
            <li><a href="https://boba.network/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              BOBA Network
            </a></li>
            <li><a href="https://fuel.network/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              Fuel
            </a></li>
          </ul>
        </div>

        <div>
          <h3 class="text-md font-semibold text-gray-800 mb-3">Application specific Layer 2s</h3>
          <ul class="grid grid-cols-2 gap-3">
            <li><a href="https://loopring.org/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              Loopring
            </a></li>
            <li><a href="https://zks.app/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              ZKSpace
            </a></li>
            <li><a href="https://aztec.network/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              Aztec
            </a></li>
          </ul>
        </div>
      </article>

      <article class="bg-white rounded-xl p-6 shadow hover:shadow-lg transition">
        <a href="/gnosis" class="flex items-center gap-4 mb-6">
          <img src="/logo/gnosis.svg" alt="Gnosis logo" class="h-12 w-12">
          <h2 class="text-xl font-semibold">Gnosis</h2>
        </a>
        <div>
          <h3 class="text-md font-semibold text-gray-800 mb-3">Protected products</h3>
          <ul class="grid grid-cols-2 gap-3">
            <li><a href="https://gnosispay.com/" target="_blank" rel="nofollow noopener"
              class="block border rounded-lg px-4 py-2 text-center text-gray-700 hover:bg-emerald-50 hover:text-emerald-700 transition">
              Gnosis Pay
            </a></li>
          </ul>
        </div>
      </article>

      <article class="bg-white rounded-xl p-6 shadow hover:shadow-lg transition">
        <a href="/succinct" class="flex items-center gap-4">
          <img src="/logo/succinct.svg" alt="Succinct logo" class="h-12 w-12">
          <h2 class="text-xl font-semibold">Succinct</h2>
        </a>
      </article>
    </div>
  </div>
</main>
{{> footer_amp_tailwind}}
</body>