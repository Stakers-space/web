<body id="body" data-amp-auto-lightbox-disable>
  {{> header_amp}}
  <main class="max-w-7xl mx-auto px-6 lg:px-20 py-12">
	<ul class="broadcrumbs" vocab="https://schema.org/" typeof="BreadcrumbList">
			<li property="itemListElement" typeof="ListItem">
				<a property="item" typeof="Thing" href="/" class="hover:underline">
					<span property="name">Stakers.space</span>
				</a>
				<meta property="position" content="1">
			</li>
			<li property="itemListElement" typeof="ListItem">
				<a property="item" typeof="Thing" href="/guides" class="hover:underline">
					<span property="name">Guides</span>
				</a>
				<meta property="position" content="2">
			</li>
		</ul>

    <!-- Page Title -->
    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-10">Staking Guides</h1>

    <!-- Chain-based Guides -->
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Chain-based guides</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-12">
      <a href="/ethereum-staking/full-guide"
         class="flex items-center gap-4 bg-white rounded-xl shadow hover:shadow-md p-5 border border-gray-200 transition">
        <img src="/img/icons/ethereum.png" alt="Ethereum logo" class="w-10 h-10">
        <span class="text-gray-700">One-page interactive <strong>Ethereum staking guide</strong></span>
      </a>
      <a href="/gnosis-staking/full-guide"
         class="flex items-center gap-4 bg-white rounded-xl shadow hover:shadow-md p-5 border border-gray-200 transition">
        <img src="/img/icons/gnosis.png" alt="Gnosis logo" class="w-10 h-10">
        <span class="text-gray-700">One-page interactive <strong>Gnosis staking guide</strong></span>
      </a>
    </div>

    <!-- Execution Clients -->
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Client-based guides</h2>
    <h3 class="text-xl font-semibold text-gray-700 mb-4">Execution clients</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
      {{#each executionClients}}
        <a href="/{{this.ilink}}" class="bg-gray-50 rounded-xl border border-gray-200 p-6 text-center shadow hover:shadow-md transition text-lg font-semibold text-gray-800 hover:text-emerald-600">
            {{this.name}}
        </a>
      {{/each}}
    </div>

    <!-- Consensus Clients -->
    <h3 class="text-xl font-semibold text-gray-700 mb-4">Consensus clients</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
      {{#each consensusClients}}
        <a href="/{{this.ilink}}" class="bg-gray-50 rounded-xl border border-gray-200 p-6 text-center shadow hover:shadow-md transition text-lg font-semibold text-gray-800 hover:text-emerald-600">
          {{this.name}}
        </a>
      {{/each}}
    </div>

    <!-- MEV Clients -->
    <h3 class="text-xl font-semibold text-gray-700 mb-4">Mev clients</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
      {{#each mevClients}}
        <a href="/{{this.ilink}}" class="bg-gray-50 rounded-xl border border-gray-200 p-6 text-center shadow hover:shadow-md transition text-lg font-semibold text-gray-800 hover:text-emerald-600">
          {{this.name}}
        </a>
      {{/each}}
    </div>

    <!-- Service-based Guides -->
    <section class="py-8 border-t border-gray-200">
      <h3 class="text-xl font-semibold text-gray-700 mb-4">Service-based guides</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
        {{#each serviceClients}}
          <a href="/{{this.ilink}}" class="bg-gray-50 rounded-xl border border-gray-200 p-6 text-center shadow hover:shadow-md transition text-lg font-semibold text-gray-800 hover:text-emerald-600">
              {{this.name}}
          </a>
        {{/each}}
        <a href="/ethereum-staking/full-guide/lido" class="bg-gray-50 rounded-xl border border-gray-200 p-6 text-center shadow hover:shadow-md transition text-lg font-semibold text-gray-800 hover:text-emerald-600">
            Lido
        </a>
      </div>
    </section>

    <!-- Ethdo Guides -->
    <h3 class="text-xl font-semibold text-gray-700 mb-4">Ethdo guides</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <a href="https://github.com/Stakers-space/staking-scripts/tree/main/ethdo/presigned-exit-keys" 
           target="_blank" class="bg-gray-50 rounded-xl border border-gray-200 p-6 text-center shadow hover:shadow-md transition text-lg font-semibold text-gray-800 hover:text-emerald-600">
          Generate and use pre-signed exit keys
      </a>
    </div>

    <section class="py-8 border-t border-gray-200">
      <h3 class="text-xl font-semibold text-gray-700 mb-4">Other guides</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <a href="/ethereum-staking/keystores" 
            target="_blank" class="bg-gray-50 rounded-xl border border-gray-200 p-6 text-center shadow hover:shadow-md transition text-lg font-semibold text-gray-800 hover:text-emerald-600">
            Generate deposit keystores for Ethereum
        </a>
        <a href="/gnosis-staking/keystores" 
            target="_blank" class="bg-gray-50 rounded-xl border border-gray-200 p-6 text-center shadow hover:shadow-md transition text-lg font-semibold text-gray-800 hover:text-emerald-600">
            Generate deposit keystores for Gnosis
        </a>
      </div>
    </section>
  </main>
  {{> footer_amp_tailwind}}
</body>