<body id="body" class="bg-white text-gray-900">
{{> header_amp}}
<main class="container mx-auto px-6 lg:px-20 py-12 mb-24">
  
  <!-- Breadcrumbs -->
  	<ul class="broadcrumbs" vocab="https://schema.org/" typeof="BreadcrumbList">
			<li property="itemListElement" typeof="ListItem">
				<a property="item" typeof="Thing" href="/" class="hover:underline">
					<span property="name">Stakers.space</span>
				</a>
				<meta property="position" content="1">
			</li>
			<li property="itemListElement" typeof="ListItem">
				<a property="item" typeof="Thing" href="/tools" class="hover:underline">
					<span property="name">Tools</span>
				</a>
				<meta property="position" content="2">
			</li>
		</ul>

  <!-- Title -->
  <h1 class="text-4xl lg:text-5xl font-bold mb-10">Tools</h1>

  <!-- Staking Manager -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
    <a href="https://github.com/Stakers-space/staking-scripts/tree/main/manager" 
       target="_blank"
       class="bg-gray-100 rounded-xl p-6 flex items-center justify-center shadow hover:shadow-lg transition text-center">
      <h4 class="text-lg font-medium">Staking Manager</h4>
    </a>
  </div>

  <!-- Monitors -->
  <h2 class="text-2xl font-semibold mb-8">Monitors</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
    <a href="https://github.com/Stakers-space/staking-scripts/tree/main/monitor/service_log" 
       target="_blank"
       class="bg-gray-100 rounded-xl p-6 flex items-center justify-center shadow hover:shadow-lg transition text-center">
      <h4 class="text-lg font-medium">Service Monitor</h4>
    </a>
    <a href="https://github.com/Stakers-space/staking-scripts/tree/main/monitor/validators_state" 
       target="_blank"
       class="bg-gray-100 rounded-xl p-6 flex items-center justify-center shadow hover:shadow-lg transition text-center">
      <h4 class="text-lg font-medium">Validators Monitor</h4>
    </a>
    <a href="https://github.com/Stakers-space/staking-scripts/tree/main/monitor/node_state_snapshots" 
       target="_blank"
       class="bg-gray-100 rounded-xl p-6 flex items-center justify-center shadow hover:shadow-lg transition text-center">
      <h4 class="text-lg font-medium">Node Monitor</h4>
    </a>
  </div>

  <!-- Utils -->
  <h2 class="text-2xl font-semibold mb-8">Utils</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <a href="https://github.com/Stakers-space/staking-scripts/tree/main/utils/start_with_delay" 
       target="_blank"
       class="bg-gray-100 rounded-xl p-6 flex items-center justify-center shadow hover:shadow-lg transition text-center">
      <h4 class="text-lg font-medium">Start with Delay</h4>
    </a>
    <a href="https://github.com/Stakers-space/staking-scripts/tree/main/utils/update-and-restart-linux" 
       target="_blank"
       class="bg-gray-100 rounded-xl p-6 flex items-center justify-center shadow hover:shadow-lg transition text-center">
      <h4 class="text-lg font-medium">Update and Restart Linux</h4>
    </a>
  </div>

</main>
{{> footer_amp_tailwind}}
</body>